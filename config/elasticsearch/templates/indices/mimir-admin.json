{
  "elasticsearch": {
    "index_patterns": ["munin_admin*"],
    "template": {
      "settings": {
        "number_of_replicas": "2"
      },
      "mappings": {
        "dynamic_templates": [
          {
            "i18n_alt_names": {
              "match_pattern": "regex",
              "path_match": "^alt_name($|s\\.\\w+)",
              "mapping": {
                "type": "text",
                "index_options": "docs",
                "analyzer": "word",
                "copy_to": "full_label",
                "fields": {
                  "prefix": {
                    "type": "text",
                    "index_options": "docs",
                    "analyzer": "prefix",
                    "search_analyzer": "word"
                  }
                }
              }
            }
          },
          {
            "i18n_loc_names": {
              "match_pattern": "regex",
              "path_match": "^loc_name($|s\\.\\w+)",
              "mapping": {
                "type": "text",
                "index_options": "docs",
                "analyzer": "word",
                "copy_to": "full_label",
                "fields": {
                  "prefix": {
                    "type": "text",
                    "index_options": "docs",
                    "analyzer": "prefix",
                    "search_analyzer": "word"
                  }
                }
              }
            }
          }
        ],
        "properties": {
          "alt_name": {
            "type": "text",
            "index_options": "docs",
            "analyzer": "word",
            "copy_to": "full_label",
            "fields": {
              "prefix": {
                "type": "text",
                "index_options": "docs",
                "analyzer": "prefix",
                "search_analyzer": "word"
              }
            }
          },
          "loc_name": {
            "type": "text",
            "index_options": "docs",
            "analyzer": "word",
            "copy_to": "full_label",
            "fields": {
              "prefix": {
                "type": "text",
                "index_options": "docs",
                "analyzer": "prefix",
                "search_analyzer": "word"
              }
            }
          },
          "bbox": {
            "enabled": false
          },
          "boundary": {
            "enabled": false
          },
          "codes": {
            "enabled": false
          },
          "insee": {
            "enabled": false
          },
          "level": {
            "enabled": false
          },
          "parent_id": {
            "enabled": false
          },
          "type": {
            "type": "constant_keyword",
            "value": "admin"
          },
          "zone_type": {
            "type": "keyword"
          }
        }
      }
    },
    "composed_of": ["mimir-base", "mimir-dynamic-mappings"],
    "version": 3,
    "priority": 10
  }
}
