{
  "elasticsearch": {
    "index_patterns": ["{{ROOT}}_poi*"],
    "template": {
      "settings": {
        "analysis": {
          "analyzer": {
            "word": {
              "filter": ["lowercase", "asciifolding"],
              "type": "custom",
              "tokenizer": "standard"
            }
          }
        }
      },
      "mappings": {
        "properties": {
          "address": {
            "type": "flattened"
          },
          "boundary": {
            "enabled": false
          },
          "poi_type": {
            "properties": {
              "id": {
                "type": "keyword"
              },
              "name": {
                "type": "text",
                "index_options": "docs",
                "analyzer": "word"
              }
            }
          },
          "properties": {
            "type": "flattened"
          },
          "full_label_extra": {
            "type": "text",
            "index_options": "docs",
            "analyzer": "word",
            "norms": false
          },
          "type": {
            "type": "constant_keyword",
            "value": "poi"
          }
        }
      }
    },
    "composed_of": ["{{ROOT}}-mimir-base", "{{ROOT}}-mimir-dynamic-mappings"],
    "version": 3,
    "priority": 10
  }
}
