{
	"elasticsearch": {
		"template": {
			"settings": {
				"number_of_shards": "1",
				"number_of_replicas": "0",
				"refresh_interval": "-1",
        "analysis": {
          "analyzer": {
            "word": {
              "tokenizer": "standard",
              "filter": [
                "lowercase",
                "asciifolding"
              ],
              "char_filter": []
            }
          }
        }
			},
			"mappings": {
				"properties": {
          "administrative_regions": {
            "enabled": false
          },
					"approx_coord": {
            "enabled": false
					},
          "context": {
            "enabled": false
          },
					"coord": {
						"type": "geo_point"
					},
					"country_codes": {
            "enabled": false
					},
					"id": {
						"type": "keyword"
					},
					"indexed_at": {
            "enabled": false
		  		},
          "label": {
            "type": "search_as_you_type"
          },
          "name": {
            "enabled": false
          },
		  		"weight": {
            "enabled": false
		  		},
          "zip_codes": {
            "type": "text",
            "index_options": "docs",
            "analyzer": "word"
          }
				}
			}
		}
	}
}
